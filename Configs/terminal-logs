## usage: add this to .zshrc and then:
#└─$ logstart

# Helper script by @sechurity 
logterm() {
    if [ -z "${UNDER_SCRIPT}" ]; then
        logdir=${HOME}/terminal-logs
        logfile=${logdir}/$(date +%F.%H-%M-%S).$$.log

        mkdir -p ${logdir}
        export UNDER_SCRIPT=${logfile}
        echo "The terminal output is saving to $logfile"
        script -f -q ${logfile}

        exit
    else
        echo "Already logging to: $UNDER_SCRIPT"
        echo "Type 'exit' to stop logging"
    fi
}
alias logstart='logterm'
